<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="380.0" prefWidth="325.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.poltavetsav.frpomodorotimer.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Pane prefHeight="767.0" prefWidth="638.0">
      <children>
      
          <Label fx:id="timerText" layoutX="14.0" layoutY="134.0" text="Time left :">
            <font>
               <Font size="36.0" />
            </font>
         </Label>
          <Button fx:id="startTimerButton" alignment="BOTTOM_CENTER" defaultButton="true" layoutX="81.0" layoutY="306.0" onAction="#onStartTimerButtonClick" text="Start Timer!">
            <font>
               <Font size="19.0" />
            </font>
         </Button>
         <Button fx:id="relaxButton" alignment="BOTTOM_CENTER" defaultButton="true" layoutX="81.0" layoutY="306.0" onAction="#onRelaxButtonClick" text="Relax" visible="false">
            <font>
               <Font size="19.0" />
            </font>
         </Button>
      </children>
   </Pane>
</VBox>
